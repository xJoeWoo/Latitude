<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@drawable/marker_info_window"
    android:id="@+id/widget_marker_info_window_root"
    >

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/widget_marker_info_window_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/info_window_title_text_size"
        android:textColor="@android:color/white"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/info_window_margin_top"
        android:layout_below="@id/widget_marker_info_window_title"
        android:id="@+id/widget_marker_info_window_snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/info_window_snippet_text_size"
        android:textColor="@android:color/white"
        />

</RelativeLayout>