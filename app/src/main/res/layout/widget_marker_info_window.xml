<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_marker_info_window_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/marker_info_window"
    >

    <TextView
        android:id="@+id/widget_marker_info_window_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxEms="7"
        android:textColor="@android:color/white"
        android:textSize="@dimen/info_window_title_text_size"
        />

    <TextView
        android:id="@+id/widget_marker_info_window_snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_marker_info_window_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/info_window_margin_top"
        android:gravity="center"
        android:maxEms="10"
        android:textColor="@android:color/white"
        android:textSize="@dimen/info_window_snippet_text_size"
        />

    <Button
        android:id="@+id/widget_marker_info_window_capture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_marker_info_window_snippet"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:text="@string/dialog_spot_action_capture"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="italic" />

</RelativeLayout>