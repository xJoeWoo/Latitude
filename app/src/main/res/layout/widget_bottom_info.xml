<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/widget_bottom_info_shadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shadow_bottom_buttons"/>

    <RelativeLayout
        android:layout_below="@+id/widget_bottom_info_shadow"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white">

        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/widget_bottom_info_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/tv_text_size_main"
            android:text="@string/widget_bottom_info_main"/>

        <TextView
            android:layout_marginTop="1dp"
            android:id="@+id/widget_bottom_info_sub"
            android:layout_below="@+id/widget_bottom_info_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/tv_text_size_sub"
            android:gravity="center"
            android:text="@string/widget_bottom_info_sub"/>


    </RelativeLayout>
</RelativeLayout>