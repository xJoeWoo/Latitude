<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/widget_bottom_buttons_shadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shadow_bottom_buttons"/>

    <RelativeLayout
        android:layout_below="@+id/widget_bottom_buttons_shadow"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/widget_bottom_buttons_divider"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/widget_bottom_buttons_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/widget_bottom_buttons_divider"
            android:background="@drawable/bg_btn"
            android:text="@android:string/cancel"
            android:textColor="@color/btn_negative"
            android:textSize="@dimen/btn_text_size" />

        <Button
            android:id="@+id/widget_bottom_buttons_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/widget_bottom_buttons_divider"
            android:background="@drawable/bg_btn"
            android:text="@android:string/ok"
            android:textColor="@color/btn_positive"
            android:textSize="@dimen/btn_text_size" />

    </RelativeLayout>
</RelativeLayout>