<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <corners android:radius="@dimen/bg_login_pop_corner_radius" />
            <solid android:color="@color/force_1" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/bg_login_pop_corner_radius" />
            <solid android:color="@color/force_1_light" />
        </shape>
    </item>

    <item>
        <color android:color="@color/force_1_extra_light" />
    </item>

</selector>